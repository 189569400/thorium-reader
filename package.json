{
  "name": "readium-desktop",
  "version": "0.0.1-alpha1",
  "description": "Desktop application to read ebooks",
  "keywords": [
    "readium",
    "epub"
  ],
  "engines": {
    "node": ">=7.0.0",
    "npm": ">=5.0.0"
  },
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npm rebuild --runtime=electron --target=1.7.10 --disturl=https://atom.io/download/atom-shell --build-from-source",
    "build": "cross-env NODE_ENV=PROD webpack --config webpack.config.js && ncp src/package.json dist/package.json",
    "build:dev:main": "webpack --config webpack.config.main.js",
    "start": "npm run build && electron .",
    "lint:ts": "tslint './src/**/*.ts' './src/**/*.tsx'",
    "lint:editorconfig": "eclint check '**/*' '!.vscode/**/*' '!.git/**/*' '!node_modules/**/*' '!reader-NYPL/**/*' '!dist/**/*' '!**/.DS_Store'",
    "lint": "npm run lint:editorconfig && npm run lint:ts",
    "start:dev:renderer": "webpack-dev-server --config webpack.config.renderer.js",
    "start:dev:main": "npm run build:dev:main && cross-env DEBUG=r2:* electron .",
    "start:dev": "concurrently --kill-others \"npm run start:dev:renderer\" \"npm run start:dev:main\"",
    "package:build": "cross-env PACKAGING=1 npm run build",
    "package": "npm run package:build && build --publish never",
    "package:win": "npm run package:build && build --win --x64",
    "package:linux": "npm run package:build && build --linux",
    "package:mac": "npm run package:build && build --mac",
    "package:all": "npm run package:build && build -mwl"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:edrlab/readium-desktop.git"
  },
  "author": {
    "name": "EDRLab developers",
    "organization": "EDRLab",
    "email": "contact@edrlab.org",
    "url": "http://github.com/edrlab/"
  },
  "license": "BSD-3-Clause",
  "licenses": [
    {
      "type": "BSD-3-Clause",
      "url": "http://opensource.org/licenses/BSD-3-Clause"
    }
  ],
  "bugs": {
    "url": "https://github.com/edrlab/readium-desktop/issues"
  },
  "homepage": "https://github.com/edrlab/readium-desktop",
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "build": {
    "productName": "ReadiumDesktop",
    "appId": "io.github.edrlab.readium-desktop",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "node_modules/",
      "external-assets/",
      "assets/",
      "index.html",
      "styles.css",
      "renderer.js",
      "main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release",
      "app": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "class-validator": "^0.6.8",
    "commonmark": "^0.27.0",
    "express": "^4.16.2",
    "follow-redirects": "^1.2.6",
    "font-awesome": "^4.7.0",
    "i18next": "^7.2.3",
    "inversify": "^3.3.0",
    "inversify-inject-decorators": "^3.0.2",
    "jsondown": "^0.1.1",
    "material-ui": "^0.19.4",
    "mime": "^1.6.0",
    "opds-feed-parser": "0.0.13",
    "portfinder": "^1.0.13",
    "pouchdb-core": "6.3.4",
    "r2-lcp-js": "github:edrlab/r2-lcp-js-dist#master",
    "r2-opds-js": "github:edrlab/r2-opds-js-dist#master",
    "r2-shared-js": "github:edrlab/r2-shared-js-dist#master",
    "r2-streamer-js": "github:edrlab/r2-streamer-js-dist#master",
    "r2-testapp-js": "github:edrlab/r2-testapp-js-dist#master",
    "r2-utils-js": "github:edrlab/r2-utils-js-dist#master",
    "raw-body": "^2.3.2",
    "react": "^15.6.2",
    "react-card-flip": "0.0.4",
    "react-dom": "^15.6.2",
    "react-dropzone": "^3.13.4",
    "react-redux": "^5.0.6",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.7.2",
    "redux-saga": "^0.15.6",
    "reflect-metadata": "^0.1.10",
    "request": "^2.83.0",
    "tmp": "0.0.33",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/commonmark": "^0.22.29",
    "@types/electron-store": "^1.2.0",
    "@types/express": "^4.11.0",
    "@types/i18next": "^2.3.40",
    "@types/material-ui": "^0.18.5",
    "@types/pouchdb-core": "^6.1.10",
    "@types/react": "^15.6.11",
    "@types/react-dom": "^0.14.23",
    "@types/react-dropzone": "0.0.32",
    "@types/react-redux": "^4.4.47",
    "@types/react-tap-event-plugin": "0.0.30",
    "@types/redux": "^3.6.31",
    "@types/reflect-metadata": "0.0.5",
    "@types/request": "^2.0.9",
    "@types/tmp": "0.0.33",
    "@types/uuid": "^2.0.30",
    "ajv": "^5.5.2",
    "asar": "^0.13.1",
    "awesome-typescript-loader": "^3.4.1",
    "aws-sdk": "^2.175.0",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "eclint": "^2.5.0",
    "electron": "1.7.*",
    "electron-builder": "^19.52.1",
    "electron-builder-http": "^19.27.5",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "ncp": "latest",
    "node-loader": "^0.6.0",
    "node-pre-gyp": "^0.6.39",
    "react-hot-loader": "^1.3.1",
    "rimraf": "latest",
    "source-map-loader": "^0.1.6",
    "style-loader": "^0.16.1",
    "tslint": "^4.5.1",
    "typescript": "^2.6.2",
    "uglify-js": "git://github.com/mishoo/UglifyJS2.git#harmony-v2.8.22",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.7",
    "webpack-node-externals": "^1.6.0"
  },
  "optionalDependencies": {
    "pouchdb-adapter-leveldb": "6.3.4",
    "leveldown": "^1.7.2"
  }
}
