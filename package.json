{
  "name": "readium-desktop",
  "version": "0.0.1-alpha1",
  "description": "Desktop application to read ebooks",
  "keywords": [
    "readium",
    "epub"
  ],
  "engines": {
    "node": ">=6",
    "npm": ">=3",
    "yarn": ">= 0.21"
  },
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cross-env BUILD_ENV=PROD webpack -p",
    "start": "npm run build && cross-env BUILD_ENV=PROD electron .",
    "lint:ts": "tslint './src/**/*.ts' './src/**/*.tsx'",
    "lint:editorconfig": "eclint check '**/*' '[!].vscode/**/*' '[!].git/**/*' '[!]node_modules/**/*' '[!]reader-NYPL/**/*' '[!]dist/**/*' '[!]**/.DS_Store'",
    "lint": "npm run lint:editorconfig && npm run lint:ts",
    "start:dev:renderer": "webpack-dev-server",
    "start:dev:main": "webpack -d && electron .",
    "start:dev": "concurrently --kill-others \"npm run start:dev:renderer\" \"npm run start:dev:main\"",
    "pouchdb:install": "npm install @types/pouchdb && npm install --ignore-scripts leveldown  && npm install --ignore-scripts pouchdb && cd node_modules/pouchdb && cross-env npm_config_runtime=electron npm_config_target=53 npm install --save leveldown@latest && cd ../.. && npm remove leveldown && npm remove prebuild"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:edrlab/readium-desktop.git"
  },
  "author": {
    "name": "EDRLab developers",
    "organization": "EDRLab",
    "url": "http://github.com/edrlab/"
  },
  "license": "BSD-3-Clause",
  "licenses": [
    {
      "type": "BSD-3-Clause",
      "url": "http://opensource.org/licenses/BSD-3-Clause"
    }
  ],
  "bugs": {
    "url": "https://github.com/edrlab/readium-desktop/issues"
  },
  "homepage": "https://github.com/edrlab/readium-desktop",
  "dependencies": {
    "@types/commonmark": "^0.22.29",
    "@types/express": "^4.0.35",
    "@types/i18next": "^2.3.35",
    "@types/material-ui": "^0.16.57",
    "@types/react": "^15.0.11",
    "@types/react-dom": "^0.14.23",
    "@types/react-dropzone": "0.0.32",
    "@types/react-redux": "^4.4.36",
    "@types/react-tap-event-plugin": "0.0.30",
    "@types/redux": "^3.6.0",
    "@types/redux-saga": "^0.10.5",
    "@types/reflect-metadata": "0.0.5",
    "@types/request": "^2.0.0",
    "@types/tmp": "^0.0.33",
    "@types/uuid": "^2.0.29",
    "babel-core": "^6.24.1",
    "class-validator": "^0.6.8",
    "commonmark": "^0.27.0",
    "electron-rebuild": "^1.5.11",
    "express": "^4.15.3",
    "follow-redirects": "^1.2.3",
    "font-awesome": "^4.7.0",
    "i18next": "^7.1.3",
    "inversify": "^3.1.0",
    "inversify-inject-decorators": "^3.0.1",
    "material-ui": "^0.17.0",
    "opds-feed-parser": "^0.0.13",
    "portfinder": "^1.0.13",
    "r2-streamer-js": "edrlab/r2-streamer-js-dist",
    "react": "^15.4.2",
    "react-card-flip": "^0.0.4",
    "react-dom": "^15.4.2",
    "react-dropzone": "^3.13.2",
    "react-redux": "^5.0.2",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "redux-saga": "^0.15.3",
    "reflect-metadata": "^0.1.10",
    "request": "^2.81.0",
    "tmp": "^0.0.31",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.1.2",
    "concurrently": "^3.4.0",
    "cross-env": "^3.2.4",
    "css-loader": "^0.28.0",
    "eclint": "^2.1.0",
    "electron": "^1.6.11",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "node-loader": "^0.6.0",
    "react-hot-loader": "^1.3.1",
    "source-map-loader": "^0.1.6",
    "style-loader": "^0.16.1",
    "tslint": "^4.5.1",
    "typescript": "^2.2.0",
    "uglify-js": "git://github.com/mishoo/UglifyJS2#harmony-v2.8.22",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "optionalDependencies": {}
}
