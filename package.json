    "pouchdb-adapter-memory": "^7.0.0",
    "react-hot-loader": "3.*.*",
    "react-svg-loader": "^2.1.0",
    "redux-devtools-extension": "^2.13.5",
    "style-loader": "^0.22.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.16.0",
    "typescript": "^3.4.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-node-externals": "^1.7.2"
  },
  "optionalDependencies": {
    "leveldown": "5.*.*",
    "pouchdb-adapter-leveldb": "7.0.*"
  }
}
