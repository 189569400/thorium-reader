{
  "name": "EDRLab.ThoriumReader",
  "version": "1.3.1-alpha.1",
  "description": "Desktop application to read ebooks",
  "keywords": [
    "readium",
    "epub"
  ],
  "main": "./main.js",
  "scripts": {
    "postinstall": "npm run rmLevelDownDeep && npm run rmLevelDownPrebuilds && npm run rmSQLite3Prebuilds && npm rebuild --runtime=electron --target=8.4.0 --disturl=https://atom.io/download/atom-shell --build-from-source && npm run rmSQLite3Build && npm run rmLevelDownBuild",
    "rmLevelDownDeep": "rimraf \"./node_modules/pouchdb-adapter-leveldb/node_modules/leveldown\"",
    "rmLevelDownPrebuilds": "rimraf \"./node_modules/leveldown/prebuilds\"",
    "rmSQLite3Prebuilds": "rimraf \"./node_modules/sqlite3/lib/binding/\"",
    "rmLevelDownBuild": "rimraf \"./node_modules/leveldown/build/\"",
    "rmSQLite3Build": "rimraf \"./node_modules/sqlite3/build/\""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:edrlab/readium-desktop.git"
  },
  "author": {
    "name": "EDRLab",
    "organization": "EDRLab",
    "email": "contact@edrlab.org",
    "url": "http://github.com/edrlab/"
  },
  "license": "BSD-3-Clause",
  "licenses": [
    {
      "type": "BSD-3-Clause",
      "url": "http://opensource.org/licenses/BSD-3-Clause"
    }
  ],
  "bugs": {
    "url": "https://github.com/edrlab/readium-desktop/issues"
  },
  "homepage": "https://github.com/edrlab/readium-desktop",
  "dependencies": {
    "bindings": "^1.5.0",
    "leveldown": "^5.6.0",
    "mathjax": "^3.0.5",
    "pouchdb-adapter-leveldb": "^7.2.1",
    "pouchdb-adapter-node-websql": "^7.0.0",
    "sqlite3": "^5.0.0",
    "yargs": "^15.4.0"
  },
  "devDependencies": {
  },
  "optionalDependencies": {}
}
